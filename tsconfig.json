{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/odersummary",
    "src/lib/auth.js",
    "src/app/api/auth/[...nextauth].ys",
    "src/app/api/auth/callback/google.js",
    "src/lib/websocket/relay.js",
    "src/app/[locale]/(main)/realtime/EventLog.jsx",
    "src/app/[locale]/(main)/realtime/SessionControls.jsx"],
  "exclude": ["node_modules"]
}
